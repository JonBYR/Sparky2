@model List<Category>
<partial name ="_Notification" />
<!---Partial view for TempData notification->
<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Category List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create New Category</a>
		</div>
	</div>
</div>
<table class="table table-bordered table-striped">
	<thead>
	<tr>
		<th>Category Name</th>
	</tr>
	</thead>
	<tbody>
		@foreach (var category in Model)
		{
			<tr>
				<td>@category.Name</td>
				<td class="w-75 btn-group" role="group">
					<a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-secondary">Edit</a>
					<a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
