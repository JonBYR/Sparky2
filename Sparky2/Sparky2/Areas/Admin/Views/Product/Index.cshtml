@using Sparky2.Models.Models
@model List<Product>
<partial name ="_Notification" />
<!---Partial view for TempData notification->
<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Product List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Product" asp-action="Create" class="btn btn-primary">Create New Product</a>
		</div>
	</div>
</div>
<table class="table table-bordered table-striped">
	<thead>
	<tr>
		<th>Title</th>
		<th>Description</th>
		<th>ISBN</th>
		<th>Author</th>
		<th>List Price</th>
		<th>Price</th>
	</tr>
	</thead>
	<tbody>
		@foreach (var product in Model)
		{
			<tr>
				<td>@product.Title</td>
				<td>@product.Description</td>
				<td>@product.ISBN</td>
				<td>@product.Author</td>
				<td>@product.ListPrice</td>
                <td>@product.Price</td>
				<td class="w-75 btn-group" role="group">
					<a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-secondary">Edit</a>
					<a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
